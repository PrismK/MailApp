<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_mailSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-06-25"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_mailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_mailSendTime"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_mailContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:maxLines="2"
            android:layout_marginRight="20dp"
            android:ellipsize="end"/>

    </RelativeLayout>

</RelativeLayout>